{% extends 'base.html.twig' %}

{% block title %}Show directory{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
{% endblock %}

{% block body %}

    <div class="container mt-5 mb-3">
        <section id="user-info">
            <h1 class="mb-3" > {{user.fullName}} - <span class="badge"> contacts: {{ contacts|length }}</span> </h1>
        </section>

        <section id="contacts">
            <a href=" {{ path('contact_create')}} " class="mt-3 mb 2">New Contact</a>
            <table id="data-table" class="table table-hover">
            <thead>
                <tr>
                    <th>Fullname</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for c in contacts %}
                
                <tr class="table-primary" >
                    <td> <a href= "{{ path('contact_show', {'id': c.id})}}">{{ c.fullName }}</a> </td>
                    <td> {{ c.phone }} </td>
                    <td> {{ c.address }} </td>
                    <td>
                        <a href="{{ path('contact_edit', {'id': c.id}) }}">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="{{ path('contact_delete', {'id': c.id}) }}">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </section>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="//cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#data-table').DataTable();
        } );
    </script>
{% endblock %}
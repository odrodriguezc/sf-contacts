{% extends 'base.html.twig' %}

{% block title %}
    Directories
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
{% endblock %}

{% block body %}

    <div class="container mt-5">
        <h1 class="mt-3 mb-3" >Directories</h1>
        <a class="mt-2 mb-2" href="{{ path('directory_create')}}"> Create directory</a>
        <table id="data-table" class="table table-hover">
            <thead>
                <tr>
                    <th>No. </th>
                    <th>Email</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for u in users %}
                
                <tr class="table-primary" >
                    <td> {{ u.id }} </td>
                    <td> <a href= "{{ path('directory_show', {'id': u.id})}}">{{ u.email }}</a> </td>
                    <td> {{ u.roles | join(',') }} </td>
                    <td>
                        <a href="{{ path('directory_edit', {'id': u.id}) }}">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="{{ path('directory_delete', {'id': u.id}) }}">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="//cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#data-table').DataTable();
        } );
    </script>
{% endblock %}